/* Styles pour le menu déroulant des catégories */
.dropdown {
    position: relative;
}

.dropdown-toggle {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--primary-green);
    color: white !important;
    padding: 0.8rem 1.2rem !important;
    border-radius: 4px;
    font-weight: 600;
}

.dropdown-toggle i.fa-chevron-down {
    font-size: 0.8rem;
    margin-left: 0.3rem;
}

.dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    width: 800px;
    background: white;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    z-index: 1000;
    display: none;
    padding: 1.5rem;
}

.dropdown:hover .dropdown-menu {
    display: block;
}

.categories-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
}

.category-column h4 {
    margin-bottom: 1rem;
    color: var(--dark-gray);
    font-size: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--primary-green);
}

.category-column ul {
    list-style: none;
}

.category-column li {
    margin-bottom: 0.7rem;
}

.category-column a {
