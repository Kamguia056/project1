/* Styles pour le carrousel de produits */
.products-carousel {
    position: relative;
    display: flex;
    align-items: center;
    margin: 0 -10px;
}

.carousel-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background: white;
    border: 2px solid var(--border-color);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    transition: all 0.3s;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.carousel-btn:hover {
    background: var(--primary-green);
    color: white;
    border-color: var(--primary-green);
}

.prev-btn {
    left: -20px;
}

.next-btn {
    right: -20px;
}

.carousel-container {
    width: 100%;
    overflow: hidden;
}

.products-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 1rem;
    width: 100%;
}

/* Cache les flèches sur mobile */
@media (max-width: 768px) {
    .products-carousel {
        margin: 0;
    }
    
    .carousel-btn {
        display: none;
    }
    
    .products-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 0.8rem;
    }
    
    .prev-btn, .next-btn {
        display: none;
    }
}

@media (max-width: 480px) {
    .products-grid {
        grid-template-columns: 1fr;
    }
}


<script>
    // Navigation du carrousel
    document.addEventListener('DOMContentLoaded', function() {
        const prevBtn = document.querySelector('.prev-btn');
        const nextBtn = document.querySelector('.next-btn');
        const productsGrid = document.querySelector('.products-grid');
        const productCards = document.querySelectorAll('.product-card');
        
        let currentPosition = 0;
        const productsToShow = 5; // Nombre de produits à afficher
        
        // Cache les flèches si moins de produits que le nombre à afficher
        if (productCards.length <= productsToShow) {
            prevBtn.style.display = 'none';
            nextBtn.style.display = 'none';
        }
        
        // Navigation suivante
        nextBtn.addEventListener('click', function() {
            if (currentPosition < productCards.length - productsToShow) {
                currentPosition++;
                updateCarousel();
            }
        });
        
        // Navigation précédente
        prevBtn.addEventListener('click', function() {
            if (currentPosition > 0) {
                currentPosition--;
                updateCarousel();
            }
        });
        
        function updateCarousel() {
            const translateValue = -currentPosition * (100 / productsToShow);
            productsGrid.style.transform = `translateX(${translateValue}%)`;
            
            // Met à jour l'état des boutons
            prevBtn.style.opacity = currentPosition > 0 ? '1' : '0.5';
            nextBtn.style.opacity = currentPosition < productCards.length - productsToShow ? '1' : '0.5';
        }
        
        // Initial state
        updateCarousel();
    });
</script>