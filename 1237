    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const inputMontant = document.getElementById('montant');
            const inputTaux = document.getElementById('taux-change');
            const spanTaux = document.getElementById('taux-actuel');
            const btnConvertir = document.getElementById('btn-convertir');
            const divResultat = document.getElementById('resultat');
            const spanMontantConverti = document.getElementById('montant-converti');
            const pDetails = document.getElementById('details-conversion');
            
            // Mettre Ã  jour l'affichage du taux quand il change
            inputTaux.addEventListener('input', function() {
                spanTaux.textContent = parseFloat(this.value).toFixed(2);
            });
            
            // Fonction de conversion
            function convertir() {
                const montant = parseFloat(inputMontant.value);
                const taux = parseFloat(inputTaux.value);
                
                if (isNaN(montant) || montant <= 0) {
                    alert('Veuillez entrer un montant valide supÃ©rieur Ã  zÃ©ro.');
                    return;
                }
                
                if (isNaN(taux) || taux <= 0) {
                    alert('Veuillez entrer un taux de change valide.');
                    return;
                }
                
                const resultat = montant * taux;
                
                // Afficher le rÃ©sultat
                spanMontantConverti.textContent = resultat.toFixed(2) + ' $';
                pDetails.textContent = `${montant.toFixed(2)} â‚¬ Ã— ${taux.toFixed(2)} = ${resultat.toFixed(2)} $`;
                
                // Afficher la zone de rÃ©sultat avec animation
                divResultat.classList.add('visible');
            }
            
            // Ã‰vÃ©nement sur le bouton
            btnConvertir.addEventListener('click', convertir);
            
            // Permettre aussi la conversion avec la touche EntrÃ©e
            inputMontant.addEventListener('keyup', function(event) {
                if (event.key === 'Enter') {
                    convertir();
                }
            });
            
            // Fonction pour obtenir un taux de change actualisÃ© (simulation)
            function actualiserTaux() {
                // En situation rÃ©elle, on ferait une requÃªte Ã  une API
                // Pour cet exemple, on simule un taux lÃ©gÃ¨rement variable
                const variation = (Math.random() * 0.1) - 0.05; // Variation entre -0.05 et +0.05
                const nouveauTaux = (1.12 + variation).toFixed(2);
                
                inputTaux.value = nouveauTaux;
                spanTaux.textContent = nouveauTaux;
                
                // Avertir que le taux a Ã©tÃ© actualisÃ©
                if (divResultat.classList.contains('visible')) {
                    alert(`Taux de change actualisÃ©: 1 â‚¬ = ${nouveauTaux} $`);
                }
            }
            
            // Actualiser le taux toutes les 30 secondes (simulation)
            setInterval(actualiserTaux, 30000);
        });
    </script>
